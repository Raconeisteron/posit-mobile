<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="org.hfoss.posit" android:versionCode="1" android:versionName="1.0.0">
	<application android:icon="@drawable/icon" android:label="@string/app_name" android:debuggable="true">
	<uses-library android:name="com.google.android.maps" />
		<activity android:name=".PositMain" android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name=".ListFindsActivity" />
		<activity android:name=".AddFindActivity" />
		<activity android:name=".DisplayFindActivity" />
		<activity android:name=".MapFindsActivity" />
		<activity android:name=".SettingsActivity" />
		<activity android:name=".ShowProjectsActivity" />
		<service android:name="org.hfoss.posit.web.SyncService"/>
	</application>
	<uses-permission android:name="android.permission.CAMERA">Taking Pictures/Barcode scan</uses-permission>
	<uses-permission android:name="android.permission.ACCESS_LOCATION"></uses-permission>
	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION">Network Location</uses-permission>
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION">GPS Location</uses-permission>
	<uses-permission android:name="android.permission.READ_PHONE_STATE">For finding the Device Id</uses-permission>
	<uses-permission android:name="android.permission.ACCESS_GPS" /> 
	<uses-permission android:name="android.permission.ACCESS_ASSISTED_GPS" /> 
	<uses-permission android:name="android.permission.CONTROL_LOCATION_UPDATES"></uses-permission>
	<uses-permission android:name="android.permission.INTERNET"></uses-permission>
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"></uses-permission>
	
</manifest> 