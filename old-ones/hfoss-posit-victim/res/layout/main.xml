<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:background="#ffffff"
xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
>
<ImageView
android:id="@+id/Logo"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_alignParentTop="true"
android:layout_centerHorizontal="true"
android:src="@drawable/posit"
/>
<RelativeLayout
android:id="@+id/sightingsButtons"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:visible="false"
>
<Button 
android:id="@+id/addSightingButton"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text = "@string/addSightingLabel"
android:visible="false"
/>
<Button 
android:id="@+id/viewSightingsButton"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_toRight="@id/addSightingButton"
android:text = "@string/viewSightingsLabel"
android:visible="false"
/>
</RelativeLayout>
</LinearLayout>