<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
android:id="@+id/list"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
xmlns:android="http://schemas.android.com/apk/res/android" >

	<ImageView
		android:id="@+id/show_image"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" />
		
	<TextView
		android:id="@+id/show_description"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="Description:"
		android:layout_below="@+id/show_latitude"
		android:layout_alignParentLeft="true" />
		
	<TextView
		android:id="@+id/show_latitude"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"		
		android:text="Latitude:"
		android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true" />
		
	<TextView
		android:id="@+id/show_longitude"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="Longitude:"
		android:layout_below="@+id/show_latitude"
		android:layout_alignParentLeft="true" />

	<TextView
		android:id="@+id/show_name"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="Title: "
		android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true" />

	<TextView
		android:id="@+id/show_sent_time"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Sent To Server At:"
		android:layout_below="@+id/modified_time"
		android:layout_alignParentLeft="true" />

	<TextView
		android:id="@+id/show_modified_time"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="Modified Time: "
		android:layout_below="@+id/create_time"
		android:layout_alignParentLeft="true" />

	<TextView
		android:id="@+id/show_create_time"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="Creation Time: "
		android:layout_below="@+id/longitude"
		android:layout_alignParentLeft="true" />
		
	<Button
		android:id="@+id/show_video"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="@string/play_video"
		android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true" />

	<Button
		android:id="@+id/show_audio"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="@string/play_audio"
		android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true" />
	
</RelativeLayout>