<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
  
    android:orientation="vertical"
    android:fillViewport="true"
    android:background="?android:attr/listDivider">
	

	 <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            style="@android:style/ButtonBar"
        	>
        	
        	<EditText 
				android:id="@+id/search_text"
				android:freezesText="true"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:hint="@string/ghostData_command"
				android:layout_below="@+id/idText" />
		
		<LinearLayout
		       android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
       			 android:orientation="horizontal"
       			 >
			<Button
				android:id="@+id/submit_command" 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				 android:layout_weight="1"
				android:text="@string/menu_submit"/>
			<Button
				android:id="@+id/start_search"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="@string/menu_search"
			
				android:layout_toRightOf="@+id/submit_command"
			/>
			</LinearLayout>
		
		<Button
android:id="@+id/command_1"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:text="Button"
android:layout_below="@+id/widget34"
android:layout_alignRight="@+id/widget31"
/>


	<Button
android:id="@+id/command_2"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:text="Button"
android:layout_below="@+id/widget35"
android:layout_alignRight="@+id/widget31"
/>

	<Button
android:id="@+id/command_3"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:text="Button"
android:layout_below="@+id/widget35"
android:layout_alignRight="@+id/widget31"
/>

	<Button
android:id="@+id/command_4"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:text="Button"
android:layout_below="@+id/widget35"
android:layout_alignRight="@+id/widget31"
/>
</LinearLayout>


        </ScrollView>