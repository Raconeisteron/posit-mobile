<?xml version="1.0" encoding="utf-8"?>

<LinearLayout 
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:background="#000000"
xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
>

<TextView android:id="@+id/trackerLabel" android:text="@string/trackerLabel" android:layout_width="wrap_content" android:layout_height="wrap_content" />

<TextView
android:id="@+id/trackerLocation"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textSize="12sp"
android:textColor="#ffffff"
android:text="@string/trackerDefaultLocation"
android:layout_centerHorizontal="true"
/>

</LinearLayout>