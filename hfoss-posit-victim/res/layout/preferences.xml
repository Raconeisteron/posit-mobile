		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:background="@color/white">
		
			<TextView  
			    android:layout_width="fill_parent" 
			    android:layout_height="wrap_content" 
			    android:background="@color/header_bg" 
			    android:textColor="@color/header_text"
			    android:textAlign="center"
			    android:text="@string/useropts_header"
			    />
		
		</RelativeLayout>
		
		<RelativeLayout android:id="@+id/addhospital_layout"
		    android:orientation="vertical"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:background="@color/white">
		
			<TextView  
			    android:layout_width="fill_parent" 
			    android:layout_height="wrap_content" 
			    android:background="@color/header_bg" 
			    android:textColor="@color/header_text"
			    android:textAlign="center"
			    android:text="@string/addhospital_header"
			    />
		
		</LinearLayout>-->
		<RelativeLayout android:id="@+id/admin_layout"
		    android:orientation="vertical"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:background="@color/white">
		
			<TextView  
			    android:layout_width="fill_parent" 
			    android:layout_height="wrap_content" 
			    android:background="@color/header_bg" 
			    android:textColor="@color/header_text"
			    android:textAlign="center"
			    android:text="Admin"
			/>
			<TextView
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:text="Using the menu you can either:"
			/>
			<TextView
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:text="	* Create a new online user"
			/>
			<TextView
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:text="	* Create a new online user"
			/>
			<TextView
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:text="	* Edit a current online user's information"
			/>
			<TextView
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:text="	* Edit the system's options"
			/>
		</RelativeLayout>
     </FrameLayout>
</TabHost>